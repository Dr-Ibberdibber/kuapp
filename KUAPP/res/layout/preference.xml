<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="first_category"
        android:title="@string/color">
        <ListPreference
            android:key="background_color"
            android:title="@string/background"
            android:summary="@string/background_info"
            android:defaultValue="0"
            android:entries="@array/background_list"
            android:entryValues="@array/background_values">
        </ListPreference>
        <ListPreference
            android:key="text_color"
            android:title="@string/text"
            android:summary="@string/text_info"
            android:defaultValue="1"
            android:entries="@array/text_list"
            android:entryValues="@array/text_values">
        </ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="second_category"
        android:title="@string/language">
        <ListPreference
            android:key="language"
            android:title="@string/language"
            android:summary="@string/language_info"
            android:defaultValue="0"
            android:entries="@array/language_list"
            android:entryValues="@array/language_values">
        </ListPreference>
    </PreferenceCategory>

</PreferenceScreen>